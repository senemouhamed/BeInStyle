<form method="post" action="{{ path('mesure_homme_delete', {'id': mesure_homme.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette mesure?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mesure_homme.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
